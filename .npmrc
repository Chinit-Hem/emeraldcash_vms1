# Prevent duplicate React installations
# This ensures only one copy of React is installed
legacy-peer-deps=false
strict-peer-dependencies=true

# Force consistent React versions across all packages
# This prevents "Invalid hook call" errors from duplicate React
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*react-dom*
public-hoist-pattern[]=*next*

# Ensure peer dependencies are properly resolved
auto-install-peers=true
